---
layout: layouts/base.liquid
---
<h2>All Posts</h2>

<!-- to retrive post marked with tagname posts in order where latest post is at top -->
{% for post in collections.posts reversed %}
    <p class="postLink">

      <!-- to check if post is publishable -->
      {% if post.data.publish !=false %}

        <!-- to print the date of publishing of post -->
        <em>{{ post.date | date: "%Y-%m-%d" }}</em>

        <!-- to create the link of using it's title name -->
        <a href="{{ post.url }}">{{ post.data.pageTitle }}</a>

        <!-- to display the tags of the post by excluding few -->
        {% for tag in post.data.tags reversed %}
              {% if tag != "posts" %}

                <!-- prints the tag names -->
                <b>{{tag}}</b>
              {% endif %}
        {% endfor %}
      {% endif %}

    </p>
{% endfor %}
